@model ProdActivity.Web.Models.LoginViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        .login-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            position: fixed;
            top: 0;
            left: 0;
        }
        .info-section {
            background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            height: 100vh;
            width: 50vw;
            padding: 0;
            position: fixed;
            left: 0;
            top: 0;
        }
        .info-section i {
            font-size: 8rem;
            margin-bottom: 40px;
        }
        .info-section h2 {
            font-size: 3.5rem;
            margin-bottom: 30px;
        }
        .info-section p {
            font-size: 1.4rem;
            max-width: 90%;
            line-height: 1.8;
        }
        .login-section {
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100vh;
            background-color: #f8f9fa;
            width: 50vw;
            padding: 0;
            position: fixed;
            right: 0;
            top: 0;
        }
        .login-form {
            width: 100%;
            padding: 0 60px;
        }
        .form-control {
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            font-size: 1.1rem;
            height: 55px;
        }
        .btn-primary {
            width: 100%;
            padding: 15px;
            border-radius: 8px;
            background: #4b6cb7;
            border: none;
            font-size: 1.2rem;
            margin-top: 30px;
        }
        .btn-primary:hover {
            background: #182848;
        }
        .form-label {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }
        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
            padding: 15px;
            height: 55px;
            display: flex;
            align-items: center;
        }
        .form-control {
            border-left: none;
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }
        h3 {
            font-size: 2.5rem;
            margin-bottom: 40px;
            color: #182848;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="info-section">
            <i class="fas fa-chart-line"></i>
            <h2>ProdActivity</h2>
            <p class="mt-3">Üretim süreçlerinizi takip etmek ve optimize etmek için güçlü çözümler sunan platformumuza hoş geldiniz. Verimliliğinizi artırın, maliyetlerinizi düşürün.</p>
        </div>
        <div class="login-section">
            <div class="login-form">
                <h3>Giriş Yap</h3>
                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="Username" class="form-control" placeholder="Kullanıcı adınızı giriniz" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Şifrenizi giriniz" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
